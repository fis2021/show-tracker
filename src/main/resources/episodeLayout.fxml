      <Text fx:id="name" layoutX="188.0" layoutY="58.0" styleClass="text" text="The Good Doctor" />
      <HBox layoutX="189.0" layoutY="60.0">
         <children>
            <Label styleClass="label" text="Episode number: " />
            <Text fx:id="episode_number" styleClass="text" text="13" textOrigin="CENTER" />
         </children>
      </HBox>
      <HBox layoutX="189.0" layoutY="75.0">
         <children>
            <Label styleClass="label" text="Season number: " />
            <Text fx:id="season_number" styleClass="text" text="4" textOrigin="CENTER" />
         </children>
      </HBox>
   </children>
</AnchorPane>
