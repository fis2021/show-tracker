<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Text?>


<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@login.css" xmlns="http://javafx.com/javafx/16"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="fis.project.st.controllers.LoginController">
    <Text layoutX="186.0" layoutY="100.0"
          styleClass="logo-title" text="Show Tracker" />
    <TextField fx:id="usernameField" id="username" layoutX="200.0" layoutY="170.0" maxWidth="-Infinity" prefHeight="22.0"
               prefWidth="200.0" promptText="Username"/>
    <Button id="goToRegisterBtn" layoutX="300.0" layoutY="315.0" mnemonicParsing="false" onAction="#changeSceneRegister" prefHeight="36.0"
            prefWidth="126.0" styleClass="secBtn" text="Go to register"/>
    <PasswordField fx:id="passwordField" id="password" layoutX="200.0" layoutY="218.0" prefHeight="23.0" prefWidth="200.0"
                   promptText="Password" scaleShape="false"/>
    <Text fx:id="loginMessage" id="loginMessage" layoutX="199.0" layoutY="153.0" styleClass="msg"/>
    <Button id="loginBtn" layoutX="200.0" layoutY="264.0" mnemonicParsing="false" onAction="#handleLoginAction" prefHeight="29.0"
            prefWidth="86.0" text="Login" />
    <Rectangle arcHeight="5.0" arcWidth="5.0" height="9.0" layoutX="290.0" layoutY="108.0"
               strokeWidth="0.0" styleClass="underline" width="110.0"/>
</AnchorPane>
